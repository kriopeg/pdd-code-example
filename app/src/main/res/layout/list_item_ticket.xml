<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ticketsCard"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/number_text_view"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="top|start"
        android:gravity="top|start"
        android:layout_margin="@dimen/horizontal_margin_default_half"
        android:fontFamily="sans-serif"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        tools:text="34" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/right_answers_text_view"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="bottom|start"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/horizontal_margin_default_half"
        android:layout_marginBottom="20dp"
        android:includeFontPadding="false"
        android:textColor="?attr/colorOnSurfaceSecondary"
        android:textSize="12sp"
        tools:text="12/20" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/horizontal_margin_default_half"
        android:max="20"
        android:progress="16"
        android:progressDrawable="@drawable/progress_horizontal" />

</com.google.android.material.card.MaterialCardView>